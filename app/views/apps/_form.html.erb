<%= simple_form_for(@app) do |f| %>
  <%= f.error_notification %>

    <%= f.input :name %>
    <%= f.input :is_active %>
    <%= f.input :critical_level, collection: App.critical_levels.keys  %>
    <%= f.input :is_internal %>
    <%= f.input :business_alias %>
    <%= f.input :repository_url %>
    <%= f.input :app_tags %>
    <%= f.association :owner %>
  <hr class="my-4">
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
