<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Is active</th>
      <th>Critical level</th>
      <th>End of life</th>
      <th>Business alias</th>
      <th>Code repository url</th>
      <th>Status</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.is_active %></td>
        <td><%= product.critical_level %></td>
        <td><%= product.end_of_life %></td>
        <td><%= product.business_alias %></td>
        <td><%= product.code_repository_url %></td>
        <td><%= product.status %></td>
        <td><%= product.owner_id %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

